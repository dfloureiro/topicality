<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unknown_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_unknown_error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_error"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_view_unknown_error_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_unknown_error_image"
        android:layout_centerHorizontal="true"
        android:text="@string/something_went_wrong" />

    <Button
        android:id="@+id/button_retry_unknown_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_unknown_error_description"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/text_size_small_padding"
        android:text="@string/button_refresh" />
</RelativeLayout>